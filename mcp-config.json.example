{
  "// NOTE": "This is an example MCP client configuration file",
  "// IMPORTANT": "Environment variables MUST be included here - .env files are NOT read by MCP clients",
  "// USAGE": "Copy this to your MCP client's config location and update with your actual values",
  
  "mcpServers": {
    "ninjaone": {
      "command": "node",
      "args": [
        "C:\\PATH\\TO\\NinjaOneMCP\\dist\\index.js"
      ],
      "cwd": "C:\\PATH\\TO\\NinjaOneMCP",
      "env": {
        "NINJA_CLIENT_ID": "<your_client_id>",
        "NINJA_CLIENT_SECRET": "<your_client_secret>",
        "NINJA_BASE_URL": "https://eu.ninjarmm.com",
        "MCP_MODE": "stdio",
        "HTTP_PORT": "3000",
        "SSE_PORT": "3001",
        "CORS_ORIGIN": "*",
        "LOG_LEVEL": "info"
      }
    }
  }
}
